@using System.Data;
@model UserListResponse

@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<div class="main-panel">
    

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <td><a asp-controller="Home" asp-action="Insert" class="btn btn-outline-primary">Add User</a></td>
                            </tr>
                            <tr>
                                USER
                            </tr>
                            <tr>
                                <th> @Html.DisplayName("User") </th>
                                <th> @Html.DisplayName("ID") </th>
                                <th> @Html.DisplayName("Name") </th>
                                <th> @Html.DisplayName("Email") </th>
                                <th> @Html.DisplayName("Password") </th>
                                <th> @Html.DisplayName("Location") </th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var row in Model.data)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="~/images/faces-clipart/pic-1.png" alt="image" />
                                    </td>
                                    <td>@row.userId  </td>
                                    <td> @row.name </td>
                                    <td>
                                        @row.email
                                    </td>
                                    <td> @row.password </td>
                                    <td> @row.location</td>
                                    <td>
                                        @using (Html.BeginForm("Edit", "Home", FormMethod.Post))
                                        {
                                        <td>@Html.Hidden("ID",row.userId)</td>
                                        <td><button class="btn btn-outline-success">Edit</button></td>
                                        
                                        }
                                    </td>
                                    <td>
                                        @using (Html.BeginForm("DeleteUser", "Home", FormMethod.Post))
                                        {
                                        <td>@Html.Hidden("ID",row.userId)</td>
                                        <td><button class="btn btn-outline-danger">Delete</button></td>

                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
