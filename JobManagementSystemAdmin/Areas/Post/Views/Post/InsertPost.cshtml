@using System.Data;
@model JobManagementSystemAdmin.Areas.Post.Models.Postall;

@{
    Layout = "_Layout";
}
@using (Html.BeginForm("Insert", "Post", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Post</h4>

                    <div>@Html.HiddenFor(model=>model.postID)</div>
                    <div>@Html.LabelFor(model=>model.content)</div>
                    <div>@Html.TextBoxFor(model=>model.content,new { @class = "form-control text-light" })</div>
                    <div>@Html.LabelFor(model=>model.postdate)</div>
                    <div> @Html.TextBoxFor(model=>model.postdate,new { @class = "form-control text-light" })</div>
                    <div>@Html.LabelFor(model=>model.userID)</div>
                    <div>@Html.TextBoxFor(model=>model.userID,new { @class = "form-control text-light" })</div>
                    

                    <div>
                        <button type="submit" class="btn btn-outline-primary mr-2 mt-2">Submit</button>
                    </div>


                </div>
            </div>
        </div>
    </div>
}